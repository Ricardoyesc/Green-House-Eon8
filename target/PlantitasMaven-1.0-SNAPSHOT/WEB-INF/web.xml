<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrarUsuario</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.RegistrarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.InicioSesion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CerrarSes</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.CerrarSes</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BajaUsuario</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.BajaUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarUsuario</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.ModificarUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarInfoUsuario</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.ModificarInfoUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TraerColeccion</servlet-name>
        <servlet-class>Servlets.TraerColeccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SubirPlantas</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.SubirPlantas</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RelacionarCatalogo</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.RelacionarCatalogo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminaDeColeccion</servlet-name>
        <servlet-class>com.greeenHouse.plantitasmaven.servlets.EliminaDeColeccion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>jersey-servlet-usuarios</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>RESTConnection</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>jersey-servlet-usuarios</servlet-name>
        <url-pattern>/rest/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarUsuario</servlet-name>
        <url-pattern>/RegistrarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/InicioSesion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CerrarSes</servlet-name>
        <url-pattern>/CerrarSes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BajaUsuario</servlet-name>
        <url-pattern>/BajaUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarUsuario</servlet-name>
        <url-pattern>/ModificarUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarInfoUsuario</servlet-name>
        <url-pattern>/ModificarInfoUsuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TraerColeccion</servlet-name>
        <url-pattern>/TraerColeccion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SubirPlantas</servlet-name>
        <url-pattern>/SubirPlantas</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RelacionarCatalogo</servlet-name>
        <url-pattern>/RelacionarCatalogo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminaDeColeccion</servlet-name>
        <url-pattern>/EliminaDeColeccion</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
